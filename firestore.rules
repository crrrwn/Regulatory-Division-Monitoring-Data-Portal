rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles (role: admin | staff) - users can read/write only their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // All form data collections - authenticated users can read and write
    // (Delete is restricted to Admin in the app UI; you can add custom claims later to enforce in rules)
    match /{collection}/{document} {
      allow read, write: if request.auth != null;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles (role: admin | staff) - users can read/write only their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Settings (e.g. admin registration code) - must be readable by everyone so the
    // Admin Login page can validate the code before the user is signed in.
    // Only authenticated users (e.g. admin in Settings) can write.
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // System logs - authenticated users can add; only needed if you read logs from client
    match /systemLogs/{document} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // All form data collections - authenticated users can read and write
    match /{collection}/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
